@model LoginViewModel

@{
    ViewData["Title"] = "Login page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Login form</h1>

<div class="row mt-5">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">

        <form class="form-signin text-center" asp-controller="Home" asp-action="Login" method="post">
            <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
            <label for="inputEmail" class="sr-only">Email address</label>
            <input asp-for="Login" type="email" id="inputEmail" class="form-control" placeholder="Email address" required autofocus>
            <label for="inputPassword" class="sr-only">Password</label>
            <input asp-for="Password" type="password" id="inputPassword" class="form-control mt-4" placeholder="Password" required>
            <span class="text-danger text-center">@Model.ErrorMessage</span>
            <button class="btn btn-lg btn-primary btn-block mt-4" type="submit">Sign in</button>
        </form>

    </div>
    <div class="col-sm-3"></div>
</div>