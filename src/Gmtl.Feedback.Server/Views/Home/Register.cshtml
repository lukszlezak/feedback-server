@model RegisterViewModel

@{
    ViewData["Title"] = "Registration page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Registration form</h1>

<div class="row mt-5">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">

        <form class="form-signin text-center" asp-controller="Home" asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <h1 class="h3 mb-3 font-weight-normal">Please register</h1>
            <label for="inputEmail" class="sr-only">Email address</label>
            <input asp-for="Login" type="text" id="inputEmail" class="form-control" placeholder="Email address" required autofocus>
            <label for="inputPassword" class="sr-only">Password</label>
            <input asp-for="Password" type="password" id="inputPassword" class="form-control mt-4" placeholder="Password" required>
            <label for="inputPassword2" class="sr-only">Re-type Password</label>
            <input asp-for="Password2" type="password" id="inputPassword2" class="form-control mt-4" placeholder="Re-type Password" required>
            <div class="checkbox mb-3 mt-4">
                <label>
                    <input asp-for="Regulations" type="checkbox"> Accept regulations of feedbacks page.
                </label>
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
            <span asp-validation-for="Login" class="text-danger"></span><br />
            <span asp-validation-for="Password" class="text-danger"></span><br />
            <span asp-validation-for="Regulations" class="text-danger"></span>
        </form>

    </div>
    <div class="col-sm-3"></div>
</div>

